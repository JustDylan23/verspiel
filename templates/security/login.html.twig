{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sonata_left_side %}
{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-page {
            background: linear-gradient(to top right, #1C1C26, #7E7B7D);
        }
        .login-box-body {
            background-color: rgba(255, 255, 255, 0.2);
            color: white!important;
        }
        input {
            color: white!important;
            background-color: rgba(255, 255, 255, 0.2)!important;
        }
        .rounded {
            border-radius: 5px!important;
        }
        input::placeholder {
            color: rgba(255, 255, 255, 0.6)!important;
        }
        .text-white {
            color: white;
        }
    </style>
{% endblock %}


{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-logo text-white">
            <img src="{{ asset('android-chrome-192x192.png') }}" width="128" alt="">
            <div>Admin Login</div>
        </div>
        <div class="login-box-body">
            {% block sonata_user_login_form %}
                {% block sonata_user_login_error %}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                {% endblock %}
                <p class="login-box-msg">Authentication</p>
                <form method="post" role="form" autocomplete="off">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control rounded" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username" autocapitalize="none"/>
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>

                    <div class="form-group has-feedback">
                        <input type="password" class="form-control rounded" id="password" name="_password" required="required" placeholder="Password"  autocapitalize="none"/>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" class="form-control" id="remember_me" name="_remember_me" checked/>
                        <label for="remember_me">Remember me</label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block btn-flat rounded">Login</button>
                </form>
            {% endblock %}
        </div>
    </div>
{% endblock sonata_wrapper %}
